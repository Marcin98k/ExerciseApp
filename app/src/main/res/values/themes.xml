<resources>
    <!-- Base application theme. -->
    <style name="Theme.ExerciseApp" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Title_TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Subtitle_TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="main_Button">
        <item name="textAllCaps">false</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="myMainContainerInputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
    </style>

    <style name="myMainInputText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:minHeight">50dp</item>
    </style>


    <style name="MyStandardButtonGuidelines" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/standard_button_shape</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MyMenuGuidelines" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="itemIconSize">28dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="menu">@menu/bottom_navigation_bar</item>
        <item name="itemIconTint">@drawable/bottom_nav_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_color_selector</item>
    </style>
</resources>