<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExerciseApp" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>;
    </style>
    
    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>


    <style name="Title_TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Subtitle_TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:typeface">serif</item>
    </style>
    
    <style name="main_Button">
        <item name="textAllCaps">false</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="myMainContainerInputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="myMainInputText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:minHeight">50dp</item>
    </style>


    <style name="MyStandardButtonGuidelines" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/standard_button_shape</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MyStandardButtonGuidelinesUnActive" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/standard_button_shape_un_active</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MyMenuGuidelines" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="itemIconSize">28dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="menu">@menu/bottom_navigation_bar</item>
        <item name="itemIconTint">@drawable/bottom_nav_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_color_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyActivityTitlesAppearance" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MyActivityTitlesPartContainer">
        <item name="android:background">@color/dark_grey</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>

    <style name="MyActivityTitlesPartOne" parent="MyActivityTitlesAppearance">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MyActivityTitlesPartTwo" parent="MyActivityTitlesAppearance">
        <item name="android:gravity">bottom|center</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyTextViewLabelAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/underline</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MyTextViewValueAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/underline</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MyRollUpButtonAppearance" parent="MyStandardButtonGuidelines">
        <item name="android:drawableStart">@drawable/ic_double_arrow_down</item>
        <item name="android:drawableEnd">@drawable/ic_double_arrow_down</item>
    </style>
