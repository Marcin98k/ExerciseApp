<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext=".TimeBreakFragment">

    <ProgressBar
        android:id="@+id/fTimeBreak_progress_bar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/rounded_progress_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fTimeBreak_tv_show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/fTimeBreak_progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/fTimeBreak_progress_bar"
        app:layout_constraintStart_toStartOf="@+id/fTimeBreak_progress_bar"
        app:layout_constraintTop_toTopOf="@+id/fTimeBreak_progress_bar" />

    <Button
        android:id="@+id/fTimeBreak_btn_skip"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="PomiÅ„"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/fTimeBreak_progress_bar"
        app:layout_constraintTop_toBottomOf="@+id/fTimeBreak_progress_bar" />

    <Button
        android:id="@+id/fTimeBreak_btn_add"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="Dodaj 15s"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/fTimeBreak_progress_bar"
        app:layout_constraintTop_toBottomOf="@+id/fTimeBreak_progress_bar" />

    <TextView
        android:id="@+id/fTimeBreak_tv_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="120dp"
        android:minHeight="50dp"
        android:text="TextViewNext"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fTimeBreak_btn_skip" />

</androidx.constraintlayout.widget.ConstraintLayout>