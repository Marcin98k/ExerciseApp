<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".RepetitionExerciseFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <ImageView
            android:id="@+id/frag_repetition_exercise_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/frag_repetition_exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="25dp"
            android:text="test"
            android:textSize="24sp" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <View
            android:id="@+id/frag_repetition_exercise_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/frag_repetition_exercise_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test1"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frag_repetition_exercise_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/frag_repetition_exercise_text_view_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/frag_repetition_exercise_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/frag_repetition_exercise_text_view_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test1 || "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/frag_repetition_exercise_current_set" />

        <TextView
            android:id="@+id/frag_repetition_exercise_current_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/frag_repetition_exercise_view" />

        <TextView
            android:id="@+id/frag_repetition_exercise_text_view_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test1 || "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frag_repetition_exercise_view" />

        <TextView
            android:id="@+id/frag_repetition_exercise_sum_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frag_repetition_exercise_text_view_three" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>