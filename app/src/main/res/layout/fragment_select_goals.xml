<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectGoalsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_goals"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginVertical="30dp"/>

        <CheckBox
            android:id="@+id/fSelectGoal_firstOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@color/transparent"
            android:text="@string/strength"
            android:textAlignment="center"
            android:background="@drawable/actual_state_one"
            android:layout_marginVertical="5dp"/>

        <CheckBox
            android:id="@+id/fSelectGoal_secondOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@color/transparent"
            android:text="@string/muscle"
            android:textAlignment="center"
            android:background="@drawable/actual_state_one"
            android:layout_marginVertical="5dp"/>

        <CheckBox
            android:id="@+id/fSelectGoal_thirdOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@color/transparent"
            android:text="@string/fatLose"
            android:textAlignment="center"
            android:background="@drawable/actual_state_one"
            android:layout_marginVertical="5dp"/>

        <CheckBox
            android:id="@+id/fSelectGoal_forthOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@color/transparent"
            android:text="@string/technique"
            android:textAlignment="center"
            android:background="@drawable/actual_state_one"
            android:layout_marginVertical="5dp"/>
    </LinearLayout>
</ScrollView>