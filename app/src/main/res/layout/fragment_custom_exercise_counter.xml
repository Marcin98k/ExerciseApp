<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomExerciseCounterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="75dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sets"
        android:minHeight="50dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/frag_custom_exercise_btn_plus_sets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+" />

    <TextView
        android:id="@+id/frag_custom_exercise_txt_sets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/frag_custom_exercise_btn_minus_sets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volume"
        android:minHeight="50dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/frag_custom_exercise_btn_plus_exercise_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+" />

    <TextView
        android:id="@+id/frag_custom_exercise_txt_exercise_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/frag_custom_exercise_btn_minus_exercise_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rest"
        android:minHeight="50dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/frag_custom_exercise_btn_plus_rest_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+" />

    <TextView
        android:id="@+id/frag_custom_exercise_txt_rest_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/frag_custom_exercise_btn_minus_rest_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"/>
    </LinearLayout>
</ScrollView>